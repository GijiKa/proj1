<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="ecole.Eleves" table="ELEVES">
        <id name="id" column="NUM_ELEVES">
            <generator class="native"/>
        </id>
    <property name="nom"  column ="NOM"/>
	<property name="prenom"  column ="PRENOM"/>
    <property name="date_naiss" type="timestamp" column="DATE_NAISSANCE"/>
	<property name="poids" type="float" column="POIDS"/>
	<property name="annee" type="int" column="ANNEE"/>

    </class>


</hibernate-mapping>
